<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blueprincipal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/raceVehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veiculo corrida"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/montserratbold"/>

    <TextView
        android:id="@+id/raceDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/raceVehicle"
        app:layout_constraintStart_toStartOf="@+id/raceVehicle"
        android:text="Data da corrida"
        android:textSize="12sp"
        android:fontFamily="@font/montserratmedium"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/racePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$5,00"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/race_editrace"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserratbold" />

    <ImageView
        android:id="@+id/race_editrace"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>